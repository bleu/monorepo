{
  "name": "@balancer-pool-metadata/contracts",
  "version": "1.0.0",
  "description": "The harmony between Foundry and Hardhat.",
  "directories": {
    "lib": "lib",
    "test": "test"
  },
  "scripts": {
    "dev": "pnpm run --stream --parallel dev:anvil",
    "dev:anvil": "anvil",
    "deploy:local": "source .env && forge script script/PoolMetadataRegistry.s.sol:Deploy --fork-url $ANVIL_FORK_URL -vvvvv --broadcast",
    "deploy:goerli": "source .env && forge script script/PoolMetadataRegistry.s.sol:Deploy --rpc-url $GOERLI_RPC_URL -vvvvv --broadcast --verify",
    "forge:re": "forge re > /tmp/re && sort -u /tmp/re remappings.txt > /tmp/remappings.txt && mv /tmp/remappings.txt remappings.txt",
    "test": "forge test",
    "format": "prettier --write .",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/eslint .",
    "lint:fix": "eslint --cache --cache-location ./node_modules/.cache/eslint . --fix"
  },
  "devDependencies": {
    "@balancer-pool-metadata/tsconfig": "workspace:*",
    "@nomicfoundation/hardhat-chai-matchers": "^1.0.6",
    "@nomicfoundation/hardhat-toolbox": "^2.0.1",
    "@nomiclabs/hardhat-ethers": "^2.2.2",
    "@typechain/ethers-v5": "^10.2.0",
    "@typechain/hardhat": "^6.1.5",
    "@types/chai": "^4.3.4",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.14.0",
    "chai": "^4.3.7",
    "ethers": "^5.7.2",
    "hardhat": "^2.12.7",
    "hardhat-preprocessor": "^0.1.5",
    "ts-node": "^10.9.1",
    "typechain": "^8.1.1",
    "typescript": "^4.9.5"
  }
}
